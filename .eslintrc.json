{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:n/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "root": true,
  "rules": {
    "n/no-missing-import": "off",
    "n/no-extraneous-import": [
      "error",
      {
        "allowModules": ["@hapi/boom", "pino"]
      }
    ]
  }
}
